<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="LikeTitleContainer">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:layout_marginBottom">0dp</item>
    	<item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>
    <style name="StandardHItem">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">2.3dp</item>
		<item name="android:layout_marginBottom">2.3dp</item>
	</style>
    <style name="LikeTitleContent" parent="StandardHItem">
        <item name="android:layout_height">38.4dp</item>
	</style>
    <style name="LikeTitleIcon" parent="LikeTitleContent">
        <item name="android:layout_width">55dp</item>
		<item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4.6dp</item>
   	</style>
    <style name="TitleIconWithBack" parent="LikeTitleIcon">
        <item name="android:layout_marginLeft">-10.6dp</item>
    </style>
    <style name="TitleBackArrow" parent="LikeTitleContent">
        <item name="android:layout_width">16.0dp</item>
        <item name="android:layout_marginLeft">-4dp</item>
    </style>
    
    <style name="UserBadge" parent="LikeTitleContent">
        <item name="android:layout_width">38.4dp</item>
        <item name="android:scaleType">fitCenter</item>
       	<item name="android:visibility">gone</item>
    </style>
    <style name="MoreOptionsButton" parent="LikeTitleContent">
       	<item name="android:paddingLeft">18.4dp</item>
        <item name="android:layout_width">38.4dp</item>
    </style>
    <style name="PathRightArrow" parent="LikeTitleContent">
        <item name="android:layout_width">20.0dp</item>
    </style>
    <style name="PathLineLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">-6sp</item>
    </style>
    <style name="LinePath">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">fill_parent</item>
		<item name="android:layout_marginLeft">-18dp</item>
		<item name="android:layout_marginRight">4dp</item>
        </style>
    <style name="PathBullet">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    	
    <style name="LineVehicle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_alignParentRight">true</item>
		<item name="android:layout_marginRight">7dp</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="VehicleArrivingBullet" parent="LineVehicle">
        <item name="android:layout_height">9dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="VehicleBoardingBullet" parent="LineVehicle">
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="VehicleDepartingBullet" parent="LineVehicle">
        <item name="android:layout_height">9dp</item>
        <item name="android:layout_alignParentBottom">true</item>      
    </style>
</resources>
