<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    style="@style/LikeTitleContainer"
    android:background="#FF222222">
    
    <ImageView
        style="@style/TitleBackArrow"
   	    android:scaleType="centerCrop"
        android:contentDescription="Back"
        android:gravity="center"
        android:onClick="finishActivity"
        android:src="@drawable/arrow_left_button" />
    
    <ImageView
        style="@style/TitleIconWithBack"
        android:layout_height="38.4dp"
        android:contentDescription="App Icon"
        android:gravity="center"
        android:onClick="finishActivity"
        android:src="@drawable/icon" />

    <TextView
        android:layout_width="wrap_content"
		android:layout_height="53dp"
		android:textColor="#FFDDDDDD"
	  	android:text="Transport public\nTimisoara"
		android:textSize="12sp"
		android:gravity="center_vertical"
		android:layout_marginBottom="0dp"
		android:layout_marginTop="0dp"
        />
	<View
        style="@style/LikeTitleContent"
   	    android:layout_width="0dp"
   	    android:layout_weight="1"
   	    android:background="#00000000" />
   	<ImageView
   	    android:id="@+id/badge"
   	    style="@style/UserBadge"
   	    android:src="@drawable/badge_contributor"
   	    android:contentDescription="@string/app_user_achieves"
       	android:onClick="openAchievementsView"
   	    />
	<ImageView
   	    android:id="@+id/menu_button"
   	    style="@style/MoreOptionsButton"
   	    android:src="@drawable/menu_light_button"
   	    android:contentDescription="@string/app_settings"
   	    android:scaleType="centerCrop"
       	android:onClick="openContextMenu"
   	    />
</LinearLayout>
</merge>